    <script>
        let currentGallery = [];
        let currentIndex = 0;

        const villaGalleries = {
            caramello: [
                'https://i.imgur.com/ELLB8NO.jpeg',
                'https://i.imgur.com/ota3BAS.jpeg',
                'https://i.imgur.com/YP0azpk.jpeg',
                'https://i.imgur.com/OJpolEM.jpeg',
                'https://i.imgur.com/ZeddnLC.jpeg',
                'https://i.imgur.com/AwZ5G7r.jpeg',
                'https://i.imgur.com/pK1t5BY.jpeg'
            ],
            vanilla: [
                'https://i.imgur.com/ujC4sXB.jpeg',
                'https://i.imgur.com/rL8mtFK.jpeg',
                'https://i.imgur.com/AHyNLu4.jpeg',
                'https://i.imgur.com/KBCWauW.jpeg',
                'https://i.imgur.com/36xRLEd.jpeg',
                'https://i.imgur.com/P1SUZtQ.jpeg',
                'https://i.imgur.com/4xUJdLH.jpeg'
            ]
        };

        function openGallery(villaKey) {
            currentGallery = villaGalleries[villaKey];
            currentIndex = 0;
            updateGalleryUI();
            document.getElementById('galleryModal').classList.add('gallery-active');
            document.body.style.overflow = 'hidden';
        }

        function closeGallery() {
            document.getElementById('galleryModal').classList.remove('gallery-active');
            document.body.style.overflow = 'auto';
        }

        function updateGalleryUI() {
            const imgEl = document.getElementById('galleryImg');
            const counterEl = document.getElementById('galleryCounter');
            imgEl.src = currentGallery[currentIndex];
            counterEl.innerText = `${currentIndex + 1} / ${currentGallery.length}`;
        }

        function nextImage() {
            currentIndex = (currentIndex + 1) % currentGallery.length;
            updateGalleryUI();
        }

        function prevImage() {
            currentIndex = (currentIndex - 1 + currentGallery.length) % currentGallery.length;
            updateGalleryUI();
        }

        function setLanguage(lang) {
            document.querySelectorAll('[data-id]').forEach(el => {
                const text = el.getAttribute(`data-${lang}`);
                if (text) el.innerText = text;
            });
            if (lang === 'ar') {
                document.documentElement.setAttribute('dir', 'rtl');
                document.body.classList.add('rtl');
            } else {
                document.documentElement.setAttribute('dir', 'ltr');
                document.body.classList.remove('rtl');
            }
        }

        function reveal() {
            var reveals = document.querySelectorAll(".reveal");
            for (var i = 0; i < reveals.length; i++) {
                var windowHeight = window.innerHeight;
                var elementTop = reveals[i].getBoundingClientRect().top;
                if (elementTop < windowHeight - 100) {
                    reveals[i].classList.add("active");
                }
            }
        }

        window.addEventListener("scroll", reveal);
        window.onload = reveal;

        function kirimWA() {
            const nama = document.getElementById('nama').value;
            const villa = document.getElementById('villa').value;
            const tanggal = document.getElementById('tanggal').value;
            const nomorWA = "628888700154";
            if(!nama || !tanggal) {
                alert("Mohon lengkapi data nama dan tanggal!");
                return;
            }
            const pesan = `Halo Admin Lestari Villa,\nSaya ingin reservasi:\n\nNama: ${nama}\nUnit: ${villa}\nCheck-in: ${tanggal}\n\nMohon info ketersediaannya. Terima kasih.`;
            window.open(`https://wa.me/${nomorWA}?text=${encodeURIComponent(pesan)}`, '_blank');
        }
    </script>
